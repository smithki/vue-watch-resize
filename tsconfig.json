{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ],
}
